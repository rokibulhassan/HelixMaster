<div class="panel-heading">
  <h3 class="panel-title">Resend confirmation instructions</h3>
</div>
<% flash.each do |key, value| %>
    <%= content_tag(:div, value, :class => "flash #{key}") %>
<% end %>
<div class="panel-body">
  <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => {:method => :post}) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <div class="form-group">
          <%= f.email_field :email, :class => "form-control", :placeholder => "E-mail", :autofocus => true %>
        </div>

        <div><%= f.submit "Resend confirmation instructions", :class => "btn btn-lg btn-success btn-block" %></div>
      </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
