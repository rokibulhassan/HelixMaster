<div class="panel-heading">
  <h3 class="panel-title">Change your password</h3>
</div>
<% flash.each do |key, value| %>
    <%= content_tag(:div, value, :class => "flash #{key}") %>
<% end %>
<div class="panel-body">

  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put}) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>
      <fieldset>
          <div class="form-group">
            <%= f.password_field :password, :class => "form-control", :placeholder => "Password", :autofocus => true %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirmation",  %></div>

          <div><%= f.submit "Change my password",:class => "btn btn-lg btn-success btn-block" %></div>
      </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
