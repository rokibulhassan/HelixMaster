<div class="panel-heading">
  <h3 class="panel-title">Sign up</h3>
</div>
<% flash.each do |key, value| %>
    <%= content_tag(:div, value, :class => "flash #{key}") %>
<% end %>
<div class="panel-body">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <div class="form-group">
        <%= f.email_field :email, :class => "form-control", :placeholder => "Email", :autofocus => true %></div>

      <div class="form-group">
        <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %></div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirmation" %></div>

      <div><%= f.submit "Sign up",:class => "btn btn-lg btn-success btn-block" %></div>
          </fieldset>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

