<div class="row">
  <div class="col-lg-7">
    <h2>Location Types</h2>

    <div class="table-responsive">
      <table class="table table-bordered table-hover ">
        <thead>
        <tr>
          <th>Name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @location_types.each do |location_type| %>
            <tr>
              <td><%= location_type.name %></td>
              <td><%= link_to 'Show', location_type %></td>
              <td><%= link_to 'Edit', edit_location_type_path(location_type) %></td>
              <td><%= link_to 'Destroy', location_type, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to 'New Location type', new_location_type_path %>
  </div>
</div><!-- /.row -->


